<?xml version="1.0"?>
<dbc>
    <name>CreatureDisplayInfo</name>

    <field>
        <type>uint32</type>
        <name>id</name>
        <key>
            <type>primary</type>
        </key>
    </field>

    <field>
        <type>uint32</type>
        <name>model</name>
        <key>
            <type>foreign</type>
            <parent>CreatureModelData</parent>
        </key>
    </field>

    <field>
        <type>uint32</type>
        <name>sound</name>
        <key>
            <type>foreign</type>
            <parent>CreatureSoundData</parent>
        </key>
    </field>

    <field>
        <type>uint32</type>
        <name>extended_display_info</name>
        <key>
            <type>foreign</type>
            <parent>CreatureDisplayInfoExtra</parent>
        </key>
    </field>

    <field>
        <type>float</type>
        <name>creature_model_scale</name>
    </field>

    <field>
        <type>int32</type>
        <name>creature_model_alpha</name>
    </field>

    <field>
        <type>string_ref[3]</type>
        <name>texture_variation</name>
    </field>

    <enum>
        <type>int32</type>
        <name>SizeClass</name>
        <options>
            <option name="none" value="-0x01" />
            <option name="small" value="0x00" />
            <option name="medium" value="0x01" />
            <option name="large" value="0x02" />
            <option name="giant" value="0x03" />
            <option name="colossal" value="0x04" />
        </options>
    </enum>

    <field>
        <type>SizeClass</type>
        <name>size</name>
    </field>

    <field>
        <type>uint32</type>
        <name>blood</name>
        <key>
            <type>foreign</type>
            <parent>UnitBlood</parent>
        </key>
    </field>

    <field>
        <type>uint32</type>
        <name>npc_sound</name>
        <key>
            <type>foreign</type>
            <parent>NPCSounds</parent>
        </key>
    </field>
</dbc>
