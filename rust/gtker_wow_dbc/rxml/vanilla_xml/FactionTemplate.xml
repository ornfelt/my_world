<?xml version="1.0"?>
<dbc>
    <name>FactionTemplate</name>
    
    <field>
        <type>uint32</type>
        <name>id</name>
        <key>
            <type>primary</type>
        </key>
    </field>

    <field>
        <type>uint32</type>
        <name>faction</name>
        <key>
            <type>foreign</type>
            <parent>Faction</parent>
        </key>
    </field>

    <flag>
        <type>uint32</type>
        <name>PvpFlags</name>
        <options>
            <option name="pvp_flagged" value="0x800" />
            <option name="attack_pvping_players" value="0x1000" />
        </options>
    </flag>

    <field>
        <type>PvpFlags</type>
        <name>flags</name>
    </field>

    <field>
        <type>uint32</type>
        <name>faction_group</name>
        <key>
            <type>foreign</type>
            <parent>FactionGroup</parent>
        </key>
    </field>

    <field>
        <type>uint32</type>
        <name>friend_group</name>
        <key>
            <type>foreign</type>
            <parent>FactionGroup</parent>
        </key>
    </field>

    <field>
        <type>uint32</type>
        <name>enemy_group</name>
        <key>
            <type>foreign</type>
            <parent>FactionGroup</parent>
        </key>
    </field>

    <field>
        <type>uint32[4]</type>
        <name>enemies</name>
        <key>
            <type>foreign</type>
            <parent>Faction</parent>
        </key>
    </field>

    <field>
        <type>uint32[4]</type>
        <name>friends</name>
        <key>
            <type>foreign</type>
            <parent>Faction</parent>
        </key>
    </field>
</dbc>
