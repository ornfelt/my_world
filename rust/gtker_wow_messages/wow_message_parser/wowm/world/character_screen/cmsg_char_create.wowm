/// Sent after the client presses 'Create Character'. The client will then wait for [SMSG_CHAR_CREATE].
cmsg CMSG_CHAR_CREATE = 0x36 {
    CString name;
    Race race;
    Class class;
    Gender gender;
    u8 skin_color;
    u8 face;
    u8 hair_style;
    u8 hair_color;
    u8 facial_hair;
    u8 outfit_id = 0;
} {
    paste_versions = "1 2.4.3";
}

